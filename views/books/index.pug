extends ../layouts/common

block content
  h1.text-center My Books
  .container
    table.table
      thead.thead-light
        tr.text-center
          th(scope='col') Cover Book
          th(scope='col') Name
          th(scope='col') Description
          th(scope='col') Tool
          th
            a.btn.btn-success(href="/books/new") New
        each book in books
         tr(style="text-align:center;" class="justify-content-center")
           if book.coverBook
             td
               img(src=`${url}/${book.coverBook}`, width="50")
           else
             td
               img(src="https://cdn.glitch.com/c0b69024-6d9c-467e-a7cc-669b2269dcb3%2FThe_dog.jpg?v=1588297313683", width=50)
           td=book.name
           td=book.description
           td(colspan=2, class="")
             a(href="/books/view/"+book.id,alt="view") 
               img(src="https://cdn.glitch.com/09102522-1ad8-417e-a9d0-89efb35eab90%2Fbook.png?v=1587788199440")
             span &nbsp
             a(href="/books/update/"+book.id) 
               img(src="https://cdn.glitch.com/09102522-1ad8-417e-a9d0-89efb35eab90%2Frefresh.png?v=1587788321812")
             span &nbsp
             a(href="/books/"+book.id+"/delete") 
               img(src="https://cdn.glitch.com/09102522-1ad8-417e-a9d0-89efb35eab90%2Fdelete.png?v=1587788387153")


